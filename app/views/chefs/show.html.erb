<%= render 'shared/page_title', title: "Chef #{@chef.name}'s profile" %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
  <%= gravatar_for(@chef, size: 150)%>
  </div>
</div>

<h2 align="center"><%= @chef.name %>'s recipes</h2>
<%= render 'recipes/recipe', obj:@chef.recipes %>

<div class="col-md-2"></div>
<div class="recipe-actions">
  <%= link_to "Edit this Chef", edit_chef_path(@chef), class: 'btn btn-sm btn-warning' %>
  <%= link_to "Delete this chef", chef_path(@chef), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-sm btn-danger" %>
  <%= link_to "Return to Chef listing", chefs_path, class: "btn btn-sm btn-primary" %>

</div>
</br>
