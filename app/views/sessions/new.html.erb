<%= render 'shared/page_title', title: "Log In" %>
<!-- We have to manually provide the resource and the URL for the log in process -->
<!-- We're going to store the email and password in the SESSION so that we can access it throughout the app -->
<div class="row">
  <div class="col-md-12">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :Email %>
        </div>
        <div class="col-md-8">
          <%= f.email_field :email, rows: 10, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password %>
        </div>
        <div class="col-md-8">
          <%= f.password_field :password, rows: 10, class: "form-control", placeholder: "Enter your password" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit "Log In", class: "btn btn-mybtn1" %>
        </div>
      </div>
    <% end %>
    <div class="center colormatch">
      [ <%= link_to "Cancel request and return to Home Page", root_path %> ]
      <br>
      <br>
      [&nbsp&nbsp&nbsp <%= link_to "Don't have an account? Sign up now!", signup_path %> &nbsp&nbsp&nbsp]
      <hr>
    </div>
  </div>
</div>
