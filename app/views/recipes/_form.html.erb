<!-- pass the recipe object to error page -->

<%= render 'shared/errors', obj: @recipe %>

<!-- <div class="row"> -->
<div class="well-full col-md-6 mycol-md-offset-1">
  <!-- <div class="col-md-12"> -->
  <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :name %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :synopsis, "Description" %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :synopsis, class: "form-control", placeholder: "Enter a brief description of this recipe" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :description, "Ingredients"%>
      </div>
      <div class="col-md-10">
        <%= f.text_area :description, rows: 6, class: "form-control", placeholder: "Enter recipe ingredients" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :directions %>
      </div>
      <div class="col-md-10">
        <%= f.text_area :directions, rows: 6, class: "form-control", placeholder: "Enter steps to create recipe" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
          <%= f.label :ingredient_ids, "Specify Ingredients"%>
      </div>
      <!-- <div class="col-md-offset-2 col-md-9"> -->
      <div class="col-md-10">
        <%= f.collection_check_boxes :ingredient_ids, Ingredient.sorted, :id, :name do |cb|%>
          <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox")+ cb.text} %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit class: "btn btn-mybtn1" %>
      </div>
    </div>
  <% end %>
  <div class="col-md-4 col-md-offset-4 colormatch">
    [ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]
  </div>
</div>
