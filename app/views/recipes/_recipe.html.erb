<table class = "table mytable-1">

  <tr>
    <th>Recipe</th>
    <th>Description</th>
    <th>Ingredients</th>
    <th>Action</td>
  </tr>


  <% obj.each do |recipe| %>
    <tr>
      <td><%= link_to recipe.name, recipe_path(recipe) %> </td>
      <td><%= recipe.synopsis %></td>
      <% if recipe.ingredients.any? %>
        <td><%= render recipe.ingredients %></td>
      <% end %>
      <% if logged_in? && current_chef == recipe.chef %>
        <td><%= link_to "Edit this recipe", edit_recipe_path(recipe), class: 'btn btn-sm btn-warning' %>
          <%= link_to "Delete this recipe", recipe_path(recipe), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-sm btn-danger" %></td>
      <% end %>
    </tr>
  <% end %>
</table>
