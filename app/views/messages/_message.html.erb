<div class="message">
  <p>
    <!-- we get the message object from the @message instance passed from the message show page -->
    <small><em>Created <%= time_ago_in_words(message.created_at) %>
                                                  ago</em></small>
  </p>
  <p>
    <%= gravatar_for(message.chef, size: 50) %>
    <strong><%= message.chef.name.capitalize %></strong>
    <span class="content">
      <%= message.content %>
    </span>
  </p>
</div>
