<%= render 'shared/page_title', title: "Ingredients Listing" %>

<div align="center">
  <%= will_paginate %>
</div>

<table class = "table mytable-2">
  <tr>
    <th>Ingredient</th>
    <th>Recipes</th>
    <% if logged_in? && current_chef.admin? %>
      <th>Action</td>
    <% end %>
  </tr>
  <% @ingredients.each do |ing| %>
    <tr>
      <td><%= link_to ing.name.capitalize, ingredient_path(ing) %></td>
      <td><%= pluralize(ing.recipes.count, "recipe") if ing.recipes %></td>
      <% if logged_in? && current_chef.admin? %>
        <td><%= link_to "Edit this Ingredient", edit_ingredient_path(ing) %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<div align="center">
  <%= will_paginate %>
</div>
